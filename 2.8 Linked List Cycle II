# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, x):
#         self.val = x
#         self.next = None

class Solution:
    def detectCycle(self, head: Optional[ListNode]) -> Optional[ListNode]:
# Linked List Cycle II
# 双指针法和Floyd判圈算法
# 还是不太理解这道题。。。为什么fast和slow一定会相遇，以及入环点怎么找？
            slow = head
            fast = head

            # 判断是否有环？利用快慢指针（fast走2步，slow走一步）
            while fast and fast.next: # 如果 fast 和 fast.next 不为 None 就执行 while 里的代码；
                slow = slow.next
                fast = fast.next.next

                if slow == fast:
                    p = head
                    while p != slow:
                        p = p.next
                        slow = slow.next
                    return p 
                    # Python 的函数一旦执行到 return，函数立即结束。
            return None # 如果没有环，则return none
